<% layout('../views/layout') %> 

    <!-- Dashboard Section -->
    <section id="dashboard" class="py-16 bg-yellow-50">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold text-center mb-8 text-black">Attendant Dashboard</h2>
            <div class="grid md:grid-cols-3 gap-8">
                <div class="bg-white p-6 rounded-lg shadow-lg text-center">
                    <i class="fas fa-cash-register text-4xl text-black mb-4"></i>
                    <h3 class="text-xl font-bold mb-3">Process Sales</h3>
                    <p class="text-gray-700">Easily manage and record customer sales in real-time.</p>
                </div>
                <div class="bg-white p-6 rounded-lg shadow-lg text-center">
                    <i class="fas fa-receipt text-4xl text-black mb-4"></i>
                    <h3 class="text-xl font-bold mb-3">View Transactions</h3>
                    <p class="text-gray-700">Access detailed transaction history for accountability.</p>
                </div>
                <div class="bg-white p-6 rounded-lg shadow-lg text-center">
                    <i class="fas fa-chart-line text-4xl text-black mb-4"></i>
                    <h3 class="text-xl font-bold mb-3">Generate Reports</h3>
                    <p class="text-gray-700">Get insights into daily, weekly, and monthly sales trends.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Sales Entry & Checkout -->
    <section id="sales-entry" class="py-16 bg-white">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold text-center mb-8 text-black">Sales Entry & Checkout</h2>
            <div class="grid md:grid-cols-2 gap-8">
                <div class="bg-gray-100 p-6 rounded-lg shadow-lg">
                    <h3 class="text-xl font-bold mb-3">Quick Add Products</h3>
                    <p class="text-gray-700">Scan barcodes or search products by name.</p>
                </div>
                <div class="bg-gray-100 p-6 rounded-lg shadow-lg">
                    <h3 class="text-xl font-bold mb-3">Auto-Calculate Total</h3>
                    <p class="text-gray-700">Sum up item prices, including discounts/taxes.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Real-Time Stock Updates -->
    <section id="stock-updates" class="py-16 bg-yellow-50">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold text-center mb-8 text-black">Real-Time Stock Updates</h2>
            <div class="grid md:grid-cols-2 gap-8">
                <div class="bg-white p-6 rounded-lg shadow-lg">
                    <h3 class="text-xl font-bold mb-3">Low Stock Alerts</h3>
                    <p class="text-gray-700">Notify attendants when stock is running low.</p>
                    <div class="mt-4">
                        <label for="low-stock-threshold" class="block text-black font-semibold">Set Low Stock Threshold:</label>
                        <select id="low-stock-threshold" class="mt-2 p-2 border rounded w-full">
                            <option value="5">5 Items</option>
                            <option value="10">10 Items</option>
                            <option value="20">20 Items</option>
                            <option value="custom">Custom</option>
                        </select>
                    </div>
                </div>
                <div class="bg-white p-6 rounded-lg shadow-lg">
                    <h3 class="text-xl font-bold mb-3">Auto-Update Inventory</h3>
                    <p class="text-gray-700">Deduct sold items from stock automatically.</p>
                    <div class="mt-4">
                        <label for="auto-update-toggle" class="block text-black font-semibold">Enable Auto-Update:</label>
                        <select id="auto-update-toggle" class="mt-2 p-2 border rounded w-full">
                            <option value="enabled">Enabled</option>
                            <option value="disabled">Disabled</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <!-- Sales Reporting & Analytics -->
    <section id="sales-reporting" class="py-16 bg-white">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold text-center mb-8 text-black">Sales Reporting & Analytics</h2>
            <div class="grid md:grid-cols-2 gap-8">
                <div class="bg-gray-100 p-6 rounded-lg shadow-lg">
                    <h3 class="text-xl font-bold mb-3">Daily Sales Summary</h3>
                    <p class="text-gray-700">Track total sales, top-selling items, and revenue.</p>
                </div>

                <div class="bg-gray-100 p-6 rounded-lg shadow-lg">
                    <h3 class="text-xl font-bold mb-3">Trends & Insights</h3>
                    <p class="text-gray-700">Identify popular products and sales patterns.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Print / Send Receipts -->
    <section id="print-receipts" class="py-16 bg-yellow-50">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold text-center mb-8 text-black">Print / Send Receipts</h2>
            <div class="bg-white p-6 rounded-lg shadow-lg text-center">
                <h3 class="text-xl font-bold mb-3">Generate PDF Receipts</h3>
                <p class="text-gray-700">Print receipts or send them via email/SMS to customers.</p>
            </div>
        </div>
    </section>

